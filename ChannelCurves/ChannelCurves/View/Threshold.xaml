<UserControl x:Class="ChannelCurves.View.Threshold"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChannelCurves.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="阈值">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock>阈值1 Hex</TextBlock>
            <TextBox Grid.Column="1" Text="{Binding Threshold0}"/>
            <TextBlock Grid.Row="1">阈值2 Hex</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Threshold1}"/>
        </Grid>
    </GroupBox>
</UserControl>
