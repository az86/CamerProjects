<UserControl x:Class="ChannelCurves.Controls.DevicesBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChannelCurves.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="db">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="设备：" VerticalAlignment="Center"/>
        <!--<ComboBox Grid.Column="1" Name="cb" ItemsSource="{Binding Devices, ElementName=db}" SelectedItem="{Binding SelectedDevice, ElementName=db}" VerticalAlignment="Center" DisplayMemberPath="FriendlyName"/>-->
        <ComboBox Grid.Column="1" Name="cb" ItemsSource="{Binding Devices, ElementName=db}" SelectedIndex="{Binding SelectedDeviceIndex,ElementName=db,Mode=OneWayToSource}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
